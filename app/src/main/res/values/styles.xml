<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WidgetInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/widget_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/widget_padding_horizontal</item>
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:hint">@string/widget_text</item>
        <item name="android:textColorHint">@color/widget_hint_text_color</item>
        <item name="android:background">@drawable/widget_input</item>
    </style>
</resources>